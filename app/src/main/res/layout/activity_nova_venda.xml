<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context=".NovaVendaActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="10"
                  android:gravity="center"
                  android:orientation="vertical">
        <EditText android:id="@+id/form_venda_description" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp" android:hint="Descrição"/>

        <EditText android:id="@+id/form_venda_total" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp" android:hint="Valor total"/>

        <EditText android:id="@+id/form_venda_addition" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp" android:hint="Acréscimo"/>

        <EditText android:id="@+id/form_venda_discount" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp" android:hint="Desconto"/>

        <TextView android:id="@+id/form_venda_total_real" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"
                  android:text="Total liquído: R$ 0,00" android:textAlignment="center"/>
    </LinearLayout>

    <Button android:id="@+id/btn_salvar_nova_venda" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
            android:text="Salvar"/>

</LinearLayout>